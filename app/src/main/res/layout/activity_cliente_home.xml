<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorSurfaceContainer"
    tools:context=".usuario.ClienteHomeActivity">

    <!-- Esto envuelve todos los elementos -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- Top navbar -->
        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/topAppBar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/colorPrimary"
            android:title="Breeze"
            android:titleTextColor="@android:color/white"
            app:titleCentered="true"
            app:menu="@menu/menu_top_bar" />

        <!-- Area de fragmentos -->
        <FrameLayout
            android:id="@+id/fragment_container"
            android:layout_width="match_parent"
            android:layout_height="588dp"
            android:layout_weight="1"
            android:background="@color/colorSurface" />
    </LinearLayout>

    <!-- Bottom navbar -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/nav_user_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@color/colorSurfaceContainer"
        app:itemIconTint="@color/colorPrimary"
        app:itemTextColor="@color/colorPrimary"
        app:menu="@menu/nav_user_menu" />
</androidx.coordinatorlayout.widget.CoordinatorLayout>
